package com.techlabs.dbConnect.controllers;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RestController;

import com.techlabs.dbConnect.entity.Student;
import com.techlabs.dbConnect.entity.StudntRepositoryImpl;
import com.techlabs.dbConnect.service.StudentService;

@RestController
public class StudentController {
	@Autowired
	private StudentService studentService; 
	
	@GetMapping("/students")      
	public List<Student> getAllStudents(){   // request handling message 
		return studentService.getAllStudents();
	}
}
